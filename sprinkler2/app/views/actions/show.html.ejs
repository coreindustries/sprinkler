<div class="hero-unit">
  <h2 class="id"><%= action.id %></h2>
  <%- linkTo('Edit this action', editActionPath(params.id), {class: 'btn pull-right'}); %>
</div>

<h2>Action Properties</h2>
<% for(var i in action) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= action[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>
<script type="text/javascript">
$(function () {
  var pageId = window.location.pathname.split('/')[2];

  geddy.io.addListenersForModels(['Action']);

  geddy.model.Action.on('update', function (action) {
    console.log("Action.update()", action);
    if (action.id == pageId) {
      var properties = action.toData();
      for (var i in properties) {
        $('.'+i).text(properties[i]);
      }
    }
  });

  geddy.model.Action.on('remove', function (id) {
    onsole.log("Action.update()", action);
    if (id == pageId) {
      window.location = '/actions';
    }
  });
});
</script>
